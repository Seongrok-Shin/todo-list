@page "/"
@using ToDoWebApp.Services
@inject AuthService AuthService
@inject NavigationManager NavManager

<PageTitle>Home - TODO List</PageTitle>

<div class="hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <i class="bi bi-check-circle-fill me-3"></i>
                        TODO List Manager
                    </h1>
                    <p class="hero-subtitle">
                        Organize your tasks efficiently with our simple and powerful TODO list application
                    </p>

                    @if (AuthService.IsLoggedIn)
                    {
                    <div class="hero-actions logged-in">
                        <h3 class="welcome-message">Welcome back!</h3>
                        <p class="mb-4">Ready to manage your tasks?</p>
                        <div class="d-grid gap-3 d-md-block">
                            <button type="button" class="btn btn-primary btn-lg me-md-3" @onclick="NavigateToTodoList">
                                <i class="bi bi-list-task me-2"></i>View My Tasks
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-lg"
                                    @onclick="NavigateToCreateTodo">
                                <i class="bi bi-plus-circle me-2"></i>Create New TODO
                            </button>
                        </div>
                    </div>
                    }
                    else
                    {
                    <div class="hero-actions">
                        <div class="d-grid gap-3 d-md-block">
                            <button type="button" class="btn btn-primary btn-lg me-md-3" @onclick="NavigateToSignUp">
                                <i class="bi bi-person-plus me-2"></i>Get Started
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-lg" @onclick="NavigateToLogin">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </button>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center mb-5">
                <h2 class="features-title">Why Choose Our TODO List?</h2>
                <p class="features-subtitle">Simple, efficient, and designed for productivity</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-lightning-charge"></i>
                    </div>
                    <h4 class="feature-title">Fast & Simple</h4>
                    <p class="feature-description">
                        Quick task creation with our intuitive interface. Add multiple tasks at once or use our guided
                        form.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-kanban"></i>
                    </div>
                    <h4 class="feature-title">Smart Organization</h4>
                    <p class="feature-description">
                        Categorize tasks by status (TODO, WIP, REVIEW, DONE) and type (UI, Backend, API, etc.).
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4 class="feature-title">Secure & Reliable</h4>
                    <p class="feature-description">
                        Your tasks are safely stored and accessible only to you. Built with modern security practices.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="info-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="info-card">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h3 class="info-title">
                                <i class="bi bi-info-circle me-2"></i>
                                How to Use TODO List
                            </h3>
                            <p class="info-description">
                                Our TODO List application supports flexible task management with structured formatting
                                for better organization.
                            </p>
                        </div>
                        <div class="col-md-6">
                            <div class="format-examples">
                                <h5 class="mb-3">Format Examples:</h5>
                                <div class="example-item">
                                    <code>[TODO] [UI] Fix navigation menu</code>
                                </div>
                                <div class="example-item">
                                    <code>[WIP] [BE] Implement user login</code>
                                </div>
                                <div class="example-item">
                                    <code>[REVIEW] [DOC] Update API docs</code>
                                </div>
                                <div class="example-item">
                                    <code>[DONE] [UI] Create account page</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="status-badges-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="status-title mb-4">Task Status Categories</h3>
                <div class="row g-3">
                    <div class="col-md-3 col-6">
                        <div class="status-badge-card">
                            <span class="badge status-todo">
                                <i class="bi bi-circle me-1"></i>TODO
                            </span>
                            <p class="status-desc">Not Started</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="status-badge-card">
                            <span class="badge status-wip">
                                <i class="bi bi-arrow-clockwise me-1"></i>WIP
                            </span>
                            <p class="status-desc">In Progress</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="status-badge-card">
                            <span class="badge status-review">
                                <i class="bi bi-eye me-1"></i>REVIEW
                            </span>
                            <p class="status-desc">Under Review</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="status-badge-card">
                            <span class="badge status-done">
                                <i class="bi bi-check-circle me-1"></i>DONE
                            </span>
                            <p class="status-desc">Completed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
private void NavigateToLogin()
{
NavManager.NavigateTo("/login");
}

private void NavigateToSignUp()
{
NavManager.NavigateTo("/signup");
}

private void NavigateToTodoList()
{
NavManager.NavigateTo("/todolist");
}

private void NavigateToCreateTodo()
{
NavManager.NavigateTo("/create-todo");
}
}