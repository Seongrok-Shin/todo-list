@page "/"
@using ToDoWebApp.Services
@inject AuthService AuthService

<PageTitle>Welcome to TODO App</PageTitle>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">Organize Your Life with <span class="text-primary">TODO App</span></h1>
                    <p class="hero-description">
                        Stay productive and never miss a task. Our simple and intuitive TODO app helps you manage your daily tasks efficiently.
                    </p>
                    
                    @if (AuthService.IsLoggedIn)
                    {
                        <div class="hero-actions">
                            <a href="/todolist" class="btn btn-primary btn-lg me-3">View My Tasks</a>
                            <a href="/create-todo" class="btn btn-outline-primary btn-lg">Add New Task</a>
                        </div>
                        <p class="welcome-text mt-3">Welcome back! Ready to be productive today?</p>
                    }
                    else
                    {
                        <div class="hero-actions">
                            <a href="/signup" class="btn btn-primary btn-lg me-3">Get Started Free</a>
                            <a href="/login" class="btn btn-outline-primary btn-lg">Sign In</a>
                        </div>
                        <p class="features-text mt-3">Join thousands of users who trust our app to stay organized!</p>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="todo-preview">
                        <div class="preview-header">
                            <div class="preview-dots">
                                <span class="dot red"></span>
                                <span class="dot yellow"></span>
                                <span class="dot green"></span>
                            </div>
                            <h6 class="mb-0">My Tasks</h6>
                        </div>
                        <div class="preview-content">
                            <div class="task-item completed">
                                <span class="task-checkbox">✓</span>
                                <span class="task-text">Complete project proposal</span>
                            </div>
                            <div class="task-item">
                                <span class="task-checkbox"></span>
                                <span class="task-text">Review client feedback</span>
                            </div>
                            <div class="task-item">
                                <span class="task-checkbox"></span>
                                <span class="task-text">Prepare presentation slides</span>
                            </div>
                            <div class="task-item completed">
                                <span class="task-checkbox">✓</span>
                                <span class="task-text">Schedule team meeting</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Why Choose Our TODO App?</h2>
                <p class="section-subtitle">Simple, powerful, and designed for productivity</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <svg width="48" height="48" fill="currentColor" class="text-primary" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.061L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                        </svg>
                    </div>
                    <h4 class="feature-title">Easy to Use</h4>
                    <p class="feature-description">Intuitive interface that makes task management effortless</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <svg width="48" height="48" fill="currentColor" class="text-primary" viewBox="0 0 16 16">
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zM4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM10 8c-.552 0-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5S10.552 8 10 8z"/>
                        </svg>
                    </div>
                    <h4 class="feature-title">Stay Organized</h4>
                    <p class="feature-description">Keep all your tasks organized and prioritized in one place</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <svg width="48" height="48" fill="currentColor" class="text-primary" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                        </svg>
                    </div>
                    <h4 class="feature-title">Boost Productivity</h4>
                    <p class="feature-description">Track your progress and achieve more every day</p>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    protected override void OnInitialized()
    {
        // Subscribe to auth state changes to update the page when login status changes
        AuthService.OnAuthStateChanged += StateHasChanged;
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= StateHasChanged;
    }
}